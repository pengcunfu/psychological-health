.container {
  min-height: 100vh;
  background: #F5F6F7;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.section {
  margin: 30rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #E6A23C;
  border-radius: 4rpx;
}

/* 联系方式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF7E6;
  border-radius: 12rpx;
}

.contact-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
  display: block;
}

.contact-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.contact-action {
  margin-left: 20rpx;
}

.action-btn {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: #E6A23C;
  border-radius: 24rpx;
  color: #FFFFFF;
  font-size: 24rpx;
}

/* 客服时间 */
.time-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F5F6F7;
  border-radius: 12rpx;
}

.time-label {
  font-size: 28rpx;
  color: #333333;
}

.time-value {
  font-size: 28rpx;
  color: #666666;
}

/* 在线咨询 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '*';
  color: #F56C6C;
  margin-right: 8rpx;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker text {
  font-size: 28rpx;
  color: #333333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.textarea {
  width: 100%;
  height: 240rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #E6A23C;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.submit-btn::after {
  display: none;
}

/* 常见问题 */
.faq-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.faq-item {
  background: #F5F6F7;
  border-radius: 12rpx;
  overflow: hidden;
}

.faq-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.faq-title {
  font-size: 28rpx;
  color: #333333;
}

.faq-header .arrow-icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.faq-header .arrow-icon.expanded {
  transform: rotate(180deg);
}

.faq-content {
  padding: 0 24rpx 24rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
} 