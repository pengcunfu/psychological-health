.container {
  min-height: 100vh;
  background: #F5F6F7;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

/* 联系方式列表 */
.contact-list {
  margin: 30rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EBEEF5;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
  display: block;
}

.contact-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

/* 客服时间 */
.section {
  margin: 30rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #4080FF;
  border-radius: 4rpx;
}

.time-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F5F6F7;
  border-radius: 12rpx;
}

.time-label {
  font-size: 28rpx;
  color: #333333;
}

.time-value {
  font-size: 28rpx;
  color: #666666;
}

/* 在线咨询按钮 */
.action-section {
  margin: 30rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  background: #4080FF;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
}

.action-btn::after {
  display: none;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 公司信息 */
.company-info {
  margin: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.company-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.company-slogan {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.company-address {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
} 