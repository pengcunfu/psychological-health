.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 隐私提示 */
.privacy-tip {
  display: flex;
  align-items: center;
  background: #F0F7FF;
  padding: 20rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.shield-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.privacy-tip text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.close {
  font-size: 32rpx;
  color: #999;
  padding: 0 10rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.required::before {
  content: '*';
  color: #FF6B6B;
  margin-right: 4rpx;
}

.input {
  height: 88rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  height: 88rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 24rpx;
}

/* 性别选择 */
.gender-group {
  display: flex;
  gap: 32rpx;
}

.gender-option {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.gender-option.selected {
  background: #F0F7FF;
  border-color: #4080FF;
}

.radio-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.gender-option text {
  font-size: 28rpx;
  color: #333;
}

/* 协议 */
.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.checkbox {
  margin-right: 8rpx;
}

.checkbox-icon {
  width: 32rpx;
  height: 32rpx;
}

.agreement text {
  font-size: 26rpx;
  color: #666;
}

.link {
  font-size: 26rpx;
  color: #4080FF;
  display: inline;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(90deg, #4080FF, #3A66CC);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.save-btn.disabled {
  background: #CCCCCC;
  cursor: not-allowed;
}
