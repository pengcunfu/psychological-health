.course-detail {
  min-height: 100vh;
  background-color: #FFFFFF;
  position: relative;
  padding-bottom: 120rpx;
}

/* 课程封面 */
.course-cover {
  width: 100%;
  height: 300rpx;
  background-color: #F5F5F5;
}

/* 课程标题区域 */
.course-title-section {
  padding: 30rpx 40rpx;
}

.course-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
}

/* 标签区域 */
.tag-container {
  display: flex;
  margin-top: 24rpx;
  flex-wrap: wrap;
}

.tag {
  height: 56rpx;
  padding: 0 24rpx;
  background-color: rgba(226, 170, 89, 0.1);
  color: #E2AA59;
  border-radius: 28rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  border: 1rpx solid rgba(226, 170, 89, 0.2);
}

/* 课程数据统计 */
.course-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 分割线 */
.divider {
  height: 20rpx;
  background-color: #F5F5F5;
}

/* 讲师信息 */
.instructor-section {
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
}

.instructor-avatar {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(226, 170, 89, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.instructor-avatar-text {
  font-size: 0;
  color: transparent;
}

.instructor-info {
  margin-left: 20rpx;
}

.instructor-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.instructor-title {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 课程介绍 */
.course-intro-section {
  padding: 30rpx 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-bar {
  width: 6rpx;
  height: 32rpx;
  background-color: #E2AA59;
  border-radius: 3rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 16rpx;
}

.course-intro-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 课程大纲 */
.course-outline-section {
  padding: 30rpx 40rpx;
}

.chapter-list .chapter-item {
  margin-bottom: 20rpx;
}

.chapter-header {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.chapter-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chapter-title {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  margin-left: 16rpx;
}

.chapter-duration {
  font-size: 24rpx;
  color: #999999;
}

/* 底部价格与购买按钮 */
.course-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-container {
  flex: 1;
}

.current-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF5252;
}

.original-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.buy-button {
  width: 240rpx;
  height: 80rpx;
  background-color: #E2AA59;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-text {
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
} 