.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5F6F7;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
}

.loading-more {
  text-align: center;
  padding: 20rpx 0;
}

.loading-more text {
  font-size: 24rpx;
  color: #999999;
}

/* 消息时间戳 */
.time-stamp {
  text-align: center;
  margin: 20rpx 0;
}

.time-stamp text {
  font-size: 24rpx;
  color: #999999;
  background: rgba(0, 0, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 消息气泡 */
.message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.message-left {
  flex-direction: row;
}

.message-right {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
}

/* 文本消息 */
.text-message {
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  word-break: break-all;
  line-height: 1.4;
}

.message-left .text-message {
  background: #FFFFFF;
  color: #333333;
}

.message-right .text-message {
  background: #4080FF;
  color: #FFFFFF;
}

/* 图片消息 */
.image-message {
  max-width: 100%;
  border-radius: 12rpx;
}

/* 语音消息 */
.voice-message {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  min-width: 120rpx;
}

.message-left .voice-message {
  background: #FFFFFF;
}

.message-right .voice-message {
  background: #4080FF;
  flex-direction: row-reverse;
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0 12rpx;
}

.voice-message text {
  font-size: 24rpx;
}

.message-left .voice-message text {
  color: #333333;
}

.message-right .voice-message text {
  color: #FFFFFF;
}

/* 消息状态 */
.message-status {
  display: flex;
  align-items: center;
  margin: 0 10rpx;
}

.status-text {
  font-size: 24rpx;
  color: #999999;
}

.status-text.error {
  color: #FF6B6B;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

/* 输入区域 */
.input-area {
  background: #FFFFFF;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #EBEEF5;
}

.mode-switch {
  width: 56rpx;
  height: 56rpx;
  padding: 10rpx;
}

.text-input {
  flex: 1;
  height: 72rpx;
  background: #F5F6F7;
  border-radius: 36rpx;
  padding: 0 30rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

.voice-button {
  flex: 1;
  height: 72rpx;
  background: #F5F6F7;
  border-radius: 36rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-button::after {
  display: none;
}

.more-button {
  width: 56rpx;
  height: 56rpx;
  padding: 10rpx;
}

.send-button {
  width: 120rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #CCCCCC;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  padding: 0;
}

.send-button::after {
  display: none;
}

.send-button.active {
  background: #4080FF;
}

/* 更多功能面板 */
.more-panel {
  background: #FFFFFF;
  padding: 30rpx;
  border-top: 1rpx solid #EBEEF5;
}

.action-list {
  display: flex;
  flex-wrap: wrap;
}

.action-item {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666666;
}

/* 录音取消提示 */
.recording-cancel-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  padding: 30rpx 60rpx;
  border-radius: 12rpx;
  opacity: 0;
  transition: opacity 0.3s;
  pointer-events: none;
}

.recording-cancel-tip.show {
  opacity: 1;
}

.recording-cancel-tip text {
  color: #FFFFFF;
  font-size: 28rpx;
} 