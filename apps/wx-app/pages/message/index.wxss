.message-list {
  min-height: 100vh;
  background-color: #f5f6f7;
  padding-bottom: env(safe-area-inset-bottom);
}

.message-scroll {
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
}

/* 未读消息提示 */
.unread-tip {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: rgba(64, 128, 255, 0.1);
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #4080FF;
}

.mark-read {
  color: #4080FF;
  font-weight: 500;
}

/* 消息列表项 */
.message-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f6f7;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-right: 20rpx;
}

.message-content {
  flex: 1;
  min-width: 0;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.message-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #FF4D4F;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 30rpx 0;
}

.loading-status text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 