.counselor-detail {
  min-height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 120rpx;
}

/* 咨询师基本信息区域 */
.counselor-header {
  padding: 30rpx 40rpx 40rpx;
  background-color: #E2AA59;
  display: flex;
  flex-direction: column;
}

.avatar-section {
  display: flex;
  justify-content: center;
}

.avatar-container {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  border: 4rpx solid #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-text {
  font-size: 26rpx;
  color: #FFFFFF;
}

.counselor-name-section {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-container {
  display: flex;
  align-items: center;
}

.counselor-name {
  font-size: 42rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.verified-badge {
  margin-left: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.verified-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.counselor-level {
  margin-top: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 6rpx 20rpx;
}

.level-text {
  font-size: 24rpx;
  color: #FFFFFF;
}

.counselor-title {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 擅长领域标签 */
.expertise-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.expertise-tags .tag {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  margin: 10rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 咨询师统计数据 */
.counselor-stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background-color: #FFFFFF;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 选项卡 */
.tab-section {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #EEEEEE;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
}

.tab-text {
  font-size: 30rpx;
  color: #666666;
}

.tab-item.active .tab-text {
  color: #E2AA59;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 80rpx;
  right: 80rpx;
  height: 4rpx;
  background-color: #E2AA59;
}

/* 分割线 */
.divider {
  height: 20rpx;
  background-color: #f7f7f7;
}

/* 内容区域 */
.content-section {
  flex: 1;
  background-color: #FFFFFF;
}

/* 简介内容 */
.intro-content {
  padding: 20rpx 40rpx;
}

.info-item {
  margin-bottom: 40rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 16rpx;
  display: block;
}

.info-value {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
}

/* 服务说明 */
.service-section {
  padding: 30rpx 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.service-item {
  display: flex;
  margin-bottom: 30rpx;
}

.service-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999999;
}

.service-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

/* 底部价格与预约 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-section {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 42rpx;
  font-weight: bold;
  color: #E2AA59;
}

.unit {
  font-size: 24rpx;
  color: #999999;
  margin-left: 10rpx;
}

.book-button {
  width: 240rpx;
  height: 80rpx;
  background-color: #E2AA59;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.book-button::after {
  border: none;
} 