.container {
  min-height: 100vh;
  background: #F5F6F7;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.notice-card {
  margin: 30rpx;
  padding: 30rpx;
  background: #FFF7E6;
  border-radius: 16rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF9900;
  margin-bottom: 16rpx;
}

.notice-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.form-section {
  margin: 30rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #4080FF;
  border-radius: 4rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.radio-dot {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #CCCCCC;
  border-radius: 50%;
  position: relative;
}

.radio.active .radio-dot {
  border-color: #4080FF;
}

.radio.active .radio-dot::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: #4080FF;
  border-radius: 50%;
}

.radio text {
  font-size: 28rpx;
  color: #333333;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.tag.active {
  background: #F0F7FF;
  color: #4080FF;
}

.upload-box {
  width: 100%;
  height: 320rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999999;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

.textarea {
  width: 100%;
  height: 320rpx;
  background: #F5F6F7;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.submit-section {
  margin: 60rpx 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #4080FF;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  display: none;
}

.submit-tips {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 20rpx;
} 