.time-slots-container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.calendar-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-header {
  display: flex;
  align-items: center;
}

.calendar-nav {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.current-week {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin: 0 20rpx;
}

.view-actions {
  display: flex;
}

.action-button {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #E2AA59;
  background-color: rgba(226, 170, 89, 0.1);
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.week-calendar {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.week-header {
  display: flex;
  border-bottom: 2rpx solid #EEEEEE;
}

.day-header {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  border-right: 2rpx solid #EEEEEE;
}

.day-header:last-child {
  border-right: none;
}

.weekday {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.date {
  font-size: 32rpx;
  color: #333333;
}

.date.today {
  color: #E2AA59;
  font-weight: bold;
}

.time-grid-scroll {
  height: 800rpx;
}

.time-grid {
  display: flex;
  position: relative;
  min-height: 100%;
}

.time-axis {
  width: 100rpx;
  position: relative;
  border-right: 2rpx solid #EEEEEE;
}

.time-marker {
  position: absolute;
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(-20rpx);
}

.time-text {
  font-size: 24rpx;
  color: #999999;
}

.day-column {
  flex: 1;
  position: relative;
  border-right: 2rpx solid #EEEEEE;
}

.day-column:last-child {
  border-right: none;
}

.hour-grid-container {
  position: relative;
  height: 100%;
}

.hour-cell {
  height: 100rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.hour-cell:last-child {
  border-bottom: none;
}

.time-slot {
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  overflow: hidden;
}

.time-slot.available {
  background-color: rgba(226, 170, 89, 0.1);
  border: 2rpx solid #E2AA59;
  color: #E2AA59;
}

.time-slot.booked {
  background-color: rgba(76, 175, 80, 0.1);
  border: 2rpx solid #4CAF50;
  color: #4CAF50;
}

.time-slot.unavailable {
  background-color: #F5F5F5;
  border: 2rpx solid #CCCCCC;
  color: #999999;
}

.slot-time {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.slot-status {
  font-size: 22rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 32rpx;
  color: #999999;
}

.batch-edit-form, .slot-edit-form {
  padding-bottom: 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.date-range-picker, .time-range-picker {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.date-picker, .time-picker {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
}

.date-label, .time-label {
  font-size: 28rpx;
  color: #666666;
  width: 180rpx;
}

.date-value, .time-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.weekday-selector, .repeat-selector, .status-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.weekday-item, .repeat-item, .status-item {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: #F5F5F5;
  border-radius: 8rpx;
}

.weekday-item.selected, .repeat-item.selected, .status-item.selected {
  color: #E2AA59;
  background-color: rgba(226, 170, 89, 0.1);
  font-weight: bold;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 40rpx;
  gap: 20rpx;
}

.action-button {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.action-button.cancel {
  color: #666666;
  background-color: #F5F5F5;
}

.action-button.confirm {
  color: white;
  background-color: #E2AA59;
}

.action-button.delete {
  color: white;
  background-color: #FF5252;
}

.slot-info {
  background-color: #F5F5F5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.slot-date {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
  display: block;
}

.slot-time {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  display: block;
} 