.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 通用部分 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 咨询人 */
.add-account {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  cursor: pointer;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.add-account text {
  font-size: 28rpx;
  color: #666;
}

/* 账户信息 */
.account-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
}

.account-main {
  display: flex;
  flex-direction: column;
}

.account-main .name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.account-main .phone {
  font-size: 26rpx;
  color: #666;
}

.edit-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
}

.edit-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.edit-btn text {
  font-size: 26rpx;
  color: #666;
}

/* 咨询类型 */
.type-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.type-item.selected {
  background: #F0F7FF;
  border-color: #4080FF;
}

.type-item text {
  font-size: 28rpx;
  color: #333;
}

.type-item .price {
  color: #FF6B6B;
}

/* 咨询方式 */
.method-list {
  display: flex;
  gap: 20rpx;
}

.method-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.method-item.selected {
  background: #F0F7FF;
  border-color: #4080FF;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.method-item text {
  font-size: 28rpx;
  color: #333;
}

/* 可约时间 */
.time-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-item {
  display: flex;
  align-items: flex-start;
}

.date-info {
  width: 120rpx;
  text-align: center;
  margin-right: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.week {
  font-size: 24rpx;
  color: #999;
}

.time-slots {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.time-slot {
  padding: 12rpx 24rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
}

.time-slot.selected {
  background: #F0F7FF;
  border-color: #4080FF;
  color: #4080FF;
}

.time-slot.disabled {
  background: #F2F2F2;
  color: #999;
  cursor: not-allowed;
}

.full, .empty {
  font-size: 26rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-info {
  font-size: 28rpx;
  color: #333;
}

.price-info .amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B6B;
}

.submit-btn {
  width: 240rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #4080FF, #3A66CC);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn.disabled {
  background: #CCCCCC;
  cursor: not-allowed;
} 