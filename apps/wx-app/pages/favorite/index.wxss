.container {
  min-height: 100vh;
  background: #F5F6F7;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #FFFFFF;
  border-bottom: 1rpx solid #EBEEF5;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab-item text {
  font-size: 28rpx;
  color: #666666;
}

.tab-item.active text {
  color: #4080FF;
  font-weight: 500;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 4rpx;
  background: #4080FF;
  border-radius: 2rpx;
}

/* 内容区域 */
.content-swiper {
  height: calc(100vh - 88rpx);
  margin-top: 88rpx;
}

.scroll-view {
  height: 100%;
}

/* 空状态 */
.empty-state {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.action-btn {
  width: 320rpx;
  height: 88rpx;
  background: #4080FF;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  display: none;
}

/* 咨询师列表 */
.counselor-list {
  padding: 30rpx;
}

.counselor-item {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.counselor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.counselor-info {
  flex: 1;
}

.counselor-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.counselor-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 16rpx;
}

.counselor-title {
  font-size: 24rpx;
  color: #666666;
}

.counselor-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 4rpx 16rpx;
  background: #F0F7FF;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #4080FF;
}

.counselor-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF6B6B;
}

.consultation-count {
  font-size: 24rpx;
  color: #999999;
}

/* 课程列表 */
.course-list {
  padding: 30rpx;
}

.course-item {
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.course-image {
  width: 100%;
  height: 320rpx;
}

.course-info {
  padding: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.course-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.student-count {
  font-size: 24rpx;
  color: #999999;
}

/* 文章列表 */
.article-list {
  padding: 30rpx;
}

.article-item {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.article-info {
  flex: 1;
  margin-right: 20rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-footer {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.read-count, .like-count {
  font-size: 24rpx;
  color: #999999;
}

.article-image {
  width: 200rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 视频列表 */
.video-list {
  padding: 30rpx;
}

.video-item {
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.video-cover {
  position: relative;
  width: 100%;
  height: 320rpx;
}

.video-image {
  width: 100%;
  height: 100%;
}

.video-duration {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

.video-info {
  padding: 20rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.video-footer {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.play-count, .like-count {
  font-size: 24rpx;
  color: #999999;
} 