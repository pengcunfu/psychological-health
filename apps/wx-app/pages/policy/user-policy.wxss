.agreement-page {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.weui-article {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  margin-bottom: 40rpx;
}

.weui-article__h1 {
  margin-bottom: 40rpx;
  text-align: center;
}

.weui-article__title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
}

.weui-article__section {
  margin-bottom: 40rpx;
}

.weui-article__section.intro {
  margin-bottom: 30rpx;
}

.weui-article__h2 {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 20rpx;
}

.weui-article__p {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 16rpx;
  text-align: justify;
}

.weui-article__p.agreement-end {
  text-align: right;
  margin-top: 30rpx;
  color: #222;
}

.weui-article__ul {
  margin-bottom: 20rpx;
}

.weui-article__li {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 16rpx;
  padding-left: 20rpx;
}

page {
  height: 100%;
  background-color: #f7f7f7;
} 