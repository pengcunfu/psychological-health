.container {
  min-height: 100vh;
  background: #FFFFFF;
  padding: 0 30rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

/* 状态展示 */
.status-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.status-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.status-title {
  font-size: 40rpx;
  font-weight: 500;
  color: #FF6B6B;
  margin-bottom: 20rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #999999;
}

/* 订单信息 */
.order-section {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666666;
}

.value {
  font-size: 28rpx;
  color: #333333;
}

.value.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF6B6B;
}

/* 问题建议 */
.help-section {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
}

.help-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
}

.dot {
  font-size: 28rpx;
  color: #666666;
  margin-right: 12rpx;
}

.text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  line-height: 1.5;
}

/* 底部按钮 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  display: none;
}

.btn.primary {
  background: #4080FF;
  color: #FFFFFF;
}

.btn.secondary {
  background: #F5F6F7;
  color: #666666;
}

/* 联系客服 */
.contact-section {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

.link {
  color: #4080FF;
  margin-left: 12rpx;
  display: inline;
} 