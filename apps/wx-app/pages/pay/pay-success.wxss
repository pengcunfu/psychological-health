.pay-success-page {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}

/* 成功提示区域 */
.success-header {
  background-color: #E2AA59;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon {
  margin-bottom: 30rpx;
}

.icon-circle {
  width: 120rpx;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-circle .iconfont {
  color: #E2AA59;
  font-size: 70rpx;
  font-weight: bold;
}

.success-title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #ffffff;
  opacity: 0.9;
}

/* 订单信息卡片 */
.order-info-card {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #EEEEEE;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

.info-value.price {
  color: #E2AA59;
  font-weight: 500;
}

/* 提醒卡片 */
.reminder-card {
  margin: 0 30rpx 30rpx;
  background-color: rgba(226, 170, 89, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
}

.reminder-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reminder-header .iconfont {
  color: #E2AA59;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.reminder-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #E2AA59;
}

.reminder-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 咨询须知 */
.notice-section {
  margin: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.notice-list .notice-item {
  display: flex;
  margin-bottom: 20rpx;
}

.notice-item .dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #E2AA59;
  border-radius: 50%;
  margin-top: 16rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-item .notice-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 底部按钮 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 30rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 16rpx;
}

.btn-outline {
  background-color: #ffffff;
  color: #E2AA59;
  border: 1px solid #E2AA59;
}

.btn-primary {
  background-color: #E2AA59;
  color: #ffffff;
  border: 1px solid #E2AA59;
} 