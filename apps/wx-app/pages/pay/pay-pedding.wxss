.pay-pending-page {
  min-height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}

/* 价格显示区域 */
.price-header {
  background-color: #E2AA59;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.price-amount {
  font-size: 72rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.price-description {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 30rpx;
}

.payment-timeout {
  display: flex;
  align-items: center;
}

.payment-timeout text {
  font-size: 28rpx;
  color: #ffffff;
}

.timeout-tag {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
  font-size: 24rpx;
}

/* 订单信息卡片 */
.order-info-card {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.copy-btn {
  font-size: 28rpx;
  color: #E2AA59;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

.counselor-item .counselor-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.counselor-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.counselor-title {
  font-size: 24rpx;
  color: #999999;
}

.divider {
  height: 1px;
  background-color: #EEEEEE;
  margin: 20rpx 0;
}

.service-details .service-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.service-details .appointment-time {
  font-size: 28rpx;
  color: #666666;
}

/* 支付方式区域 */
.payment-methods {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}

.payment-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #EEEEEE;
}

.payment-option:last-child {
  border-bottom: none;
}

.option-left {
  display: flex;
  align-items: center;
}

.payment-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.payment-name {
  font-size: 30rpx;
  color: #333333;
}

.payment-radio {
  transform: scale(0.8);
}

/* 确认支付按钮 */
.confirm-btn-container {
  padding: 30rpx;
  margin-top: auto;
}

.confirm-btn {
  width: 100%;
  height: 90rpx;
  background-color: #E2AA59;
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
} 