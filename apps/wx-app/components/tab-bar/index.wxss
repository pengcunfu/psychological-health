.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  z-index: 999;
}

.tab-bar.border {
  border-top: 1rpx solid #eee;
}

.tab-bar-content {
  display: flex;
  padding: 8rpx 0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 4rpx 0;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.text {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
}

.text.active {
  color: #1890ff;
}

/* 徽标样式 */
.badge {
  position: absolute;
  top: 0;
  right: 50%;
  transform: translateX(12rpx);
  background: #ff4d4f;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 1;
  border-radius: 16rpx;
  padding: 4rpx 8rpx;
  min-width: 32rpx;
  text-align: center;
}

.badge.dot {
  width: 16rpx;
  height: 16rpx;
  padding: 0;
  min-width: auto;
  border-radius: 50%;
}

/* iOS 安全区域适配 */
.safe-area-inset {
  width: 100%;
  height: constant(safe-area-inset-bottom);
  /* iOS 11.0 */
  height: env(safe-area-inset-bottom);
  /* iOS 11.2+ */
  background: #ffffff;
}